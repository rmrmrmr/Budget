<section class="max-w-md w-full flex flex-col items-center justify-start h-screen bg-slate-300 text-gray-700">
  <div class="flex justify-between items-center text-lg font-medium text-white bg-sky-800 w-full py-4 px-4 text-center">
    <%= link_to image_tag('leftArrow.png', alt: "Go back", class: "h-[20px] invert"), :back %>
    <h1>NEW TRANSACTION</h1>
    <div class="w-[22px]"></div>    
  </div>

  <%= form_with model: @item, url: group_items_path(params[:group_id]), method: :post, local: true, scope: :item do |f| %>
    <%= f.text_field :name, autofocus: true, placeholder: "Item name", class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200 itemNameField" %>
    <%= f.number_field :amount, autofocus: true, placeholder: "Amount", step: 0.5, class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200 itemAmountField" %>
    
    <div class="w-[448px] flex flex-col justify-center items-center">
      <%= f.submit "Create Transaction", class: "bg-green-800 text-white text-xl font-bold w-3/6 py-2 rounded-md mt-4 createItemBtn" %>
    </div>
  <% end %>
</section>
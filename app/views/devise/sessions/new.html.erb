<section class="max-w-md w-full flex flex-col items-center justify-start h-screen bg-slate-300 text-gray-700">
  <div class="flex justify-between items-center text-lg font-medium text-white bg-sky-800 w-full py-4 px-4 text-center">
    <%= link_to image_tag('leftArrow.png', alt: "Go back", class: "h-[15px] invert"), :back%>
    <h2>LOGIN</h2>
    <div class="w-[15px]"></div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200" %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",  class: "w-[448px] outline-none focus:ring-transparent px-5 h-16 border-0 bg-slate-200"  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="w-[448px] bg-slate-300 px-4 text-gray-500 flex justify-center items-center text-lg mt-2">
        <%= f.check_box :remember_me, class: "mr-1 h-[15px] rounded-lg" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="w-[448px] flex flex-col justify-center items-center">
      <%= f.submit "Log in", class: "bg-green-800 text-white text-xl font-bold w-3/6 py-2 rounded-md mt-4" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "bg-sky-800 text-white text-xl font-bold w-3/6 py-2 rounded-md mt-4 text-center" %><br />
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-800 text-lg font-semibold w-4/6 rounded-md text-center" %><br />
    </div>
  <% end %>

</section>

<section class="max-w-md w-full flex flex-col items-center justify-start h-screen bg-slate-300 text-gray-700">
  <div class="flex justify-between items-center text-lg font-medium text-white bg-sky-800 w-full py-4 px-4 text-center">
    <%= link_to image_tag('leftArrow.png', alt: "Go back", class: "h-[15px] invert"), :back%>
    <h2>SIGN UP</h2>
    <%= link_to image_tag('homeIcon.png', alt: "Go back", class: "h-[22px] invert"), unauthenticated_root_path %>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200" %>
  </div>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "w-[448px] focus:ring-transparent px-5 h-16 border-0 bg-slate-200" %>
  </div>

  <div class="w-[448px] flex flex-col justify-center items-center">
    <%= f.submit "Sign up", class: "bg-green-800 text-white text-xl font-bold w-3/6 py-2 rounded-md mt-4"%>
    <%= link_to "Log In", new_session_path(resource_name), class: "text-xl font-bold w-3/6 py-2 rounded-md mt-4 text-center" %><br />
  </div>
<% end %>

</section>

